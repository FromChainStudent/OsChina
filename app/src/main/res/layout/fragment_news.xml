<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_news_tab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tabIndicatorColor="#12ea46"
            tabSelectedTextColor="#12ea46"
            tabTextColor="#FFC9CFCB"/>

        <ImageView
            android:id="@+id/fragment_news_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_subscribe" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_news_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>